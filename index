                <div class="bar"></div>
                <div class="bar"></div>
                <div class="bar"></div>
                <div class="bar"></div>
                <div class="bar"></div>
            </div>
            
            <div class="voice-display" id="voiceDisplay">
                al sofá con nicol
            </div>
            
            <div class="controls">
                <button class="btn" id="playBtn">Reproducir</button>
                <button class="btn btn-stop" id="stopBtn">Detener</button>
            </div>
            
            <div class="status" id="status">Listo para reproducir</div>
        </div>
    </div>

    <script>
        // Check if Web Speech API is supported
        if (!('speechSynthesis' in window)) {
            document.getElementById('status').textContent = 'Tu navegador no soporta la API de voz';
            document.getElementById('playBtn').disabled = true;
        }

        const playBtn = document.getElementById('playBtn');
        const stopBtn = document.getElementById('stopBtn');
        const statusEl = document.getElementById('status');
        const waveform = document.getElementById('waveform');

        let isPlaying = false;

        // Get the best available voice for natural sound
        function getBestVoice() {
            const voices = window.speechSynthesis.getVoices();
            
            // Look for Spanish voices
            const spanishVoices = voices.filter(voice => voice.lang.includes('es'));
            
            if (spanishVoices.length > 0) {
                // Try to find a voice that might sound more natural/child-like
                const childLikeVoices = spanishVoices.filter(voice => 
                    voice.name.toLowerCase().includes('google') || 
                    voice.name.toLowerCase().includes('es-es')
                );
                return childLikeVoices.length > 0 ? childLikeVoices[0] : spanishVoices[0];
            }
            
            // Fallback to any voice
            return voices[0] || null;
        }

        // Speak function - only says "al sofá con nicol"
        function speakText() {
            window.speechSynthesis.cancel();
            
            const utterance = new SpeechSynthesisUtterance("al sofá con nicol");
            const voice = getBestVoice();
            
            if (voice) {
                utterance.voice = voice;
            }
            
            // Optimize for natural child-like voice
            utterance.rate = 0.9; // Slightly slower
            utterance.pitch = 1.1; // Slightly higher pitch
            utterance.volume = 1.0;
            
            utterance.onstart = () => {
                isPlaying = true;
                statusEl.textContent = 'Reproduciendo...';
                waveform.classList.add('playing');
                playBtn.textContent = 'Reproduciendo';
                playBtn.disabled = true;
            };
            
            utterance.onend = () => {
                isPlaying = false;
                statusEl.textContent = 'Listo para reproducir';
                waveform.classList.remove('playing');
                playBtn.textContent = 'Reproducir';
                playBtn.disabled = false;
            };
            
            utterance.onerror = (event) => {
                isPlaying = false;
                statusEl.textContent = 'Error: ' + event.error;
                waveform.classList.remove('playing');
                playBtn.textContent = 'Reproducir';
                playBtn.disabled = false;
            };
            
            window.speechSynthesis.speak(utterance);
        }

        // Play button event
        playBtn.addEventListener('click', () => {
            if (isPlaying) return;
            speakText();
        });

        // Stop button event
        stopBtn.addEventListener('click', () => {
            window.speechSynthesis.cancel();
            isPlaying = false;
            statusEl.textContent = 'Listo para reproducir';
            waveform.classList.remove('playing');
            playBtn.textContent = 'Reproducir';
            playBtn.disabled = false;
        });

        // Load voices
        window.speechSynthesis.onvoiceschanged = () => {
            // Voices loaded
        };
    </script>
</body>
